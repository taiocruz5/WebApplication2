@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/volleyball.jpg" alt="http://www.instasayings.com/wp-content/uploads/2017/05/Volleyball-4k-ultra-hd-wallpapers-Volleyball-HD-Desktop-Background-Download-3-1024x576.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Find local volleyball matches now!
                    <a class="btn btn-default" href="/volleyball">
                        Find Out More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/table-tennis.jpg" alt="http://www.instasayings.com/wp-content/uploads/2017/05/download-table-tennis-wallpapers-1-1024x683.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Relax and have fun with friendly matches at your nearest community centre! Sponsored by GetActive! SG
                    <a class="btn btn-default" href="/tabletennis">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/badminton.jpg" alt="https://www.ibackgrounds.net/wp-content/uploads/2016/10/badminton-wallpaper.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Join us at our First Ever OpenPlay Tournament! Open-category for all ages and genders!
                    <a class="btn btn-default" href="/badminton">
                        Sign Up Today!
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/contactus.jpg" alt="Contact Us" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Do you have a listing that you want posted on OpenPlay? Contact us now!
                    <a class="btn btn-default" href="/Home/About">
                        Email Us
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

