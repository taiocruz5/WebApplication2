@model PartyInvites.Models.TableTennisResponse
@{ Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TableTennis</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>TableTennis</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RSVPForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Your name:</label>
                    <input class="form-group" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="ContactNo">YourPhone:</label>
                    <input class="form-group" asp-for="ContactNo" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">YourEmail:</label>
                    <input class="form-group" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label> Will you attend?</label>
                    <select class="form-group" asp-for="WillAttend">
                        <option value="">Choose an option</option>
                        <option value="True">Yes I'll be there</option>
                        <option value="False">No i changed my mind</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit SignUpForm
                    </button>
                </div>


            </form>
        </div>
    </div>

</body>
</html>

